---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2" class="relative">
  <a href="https://akhiln.myportfolio.com/" class="absolute inset-0 z-10 w-full h-full block"></a>
  <div class="flex justify-between w-full items-start mb-2 relative z-20">
    <div class="flex flex-col">
      <h2>Art Dump</h2>
      <span class="text-xs text-gray-500 cursor-pointer">3D & 2D</span>
    </div>
    <Pulse />
  </div>
  <p class="text-xs relative z-20">Blender, Procreate, </br>
      and Camera Captures</p>
  <div class="relative z-20 mt-2">
    <img src="" alt="" class="w-full h-auto object-cover rounded-lg" />
  </div>
</Card>